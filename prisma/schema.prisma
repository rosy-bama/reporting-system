// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserTypeEnum {
  GROUP_PASTOR
  PASTOR
  CELL_LEADER
}

model UserType {
  id Int @default(autoincrement()) @id
  usertype UserTypeEnum @unique

  users User[]
}

model User{
  id Int @default(autoincrement()) @id
  firstname String
  lastname String
  email String
  phone String
  hash String
  dob DateTime
  address String

  created_on DateTime @default(now())
  updated_on DateTime @updatedAt
  deleted_on DateTime?

  type UserType @relation(fields: [typeId], references: [id])
  typeId Int

  church Church @relation(fields: [churchId], references: [id])
  churchId Int

  

  reports Report[]
  report_history ReportHistory[]

}

model Report {
  id Int @default(autoincrement()) @id
  attendance Int
  offering Int
  first_timers Int
  young_convert Int
  number_saved Int

  created_on DateTime @default(now())
  updated_on DateTime @updatedAt
  deleted_on DateTime?

  user User @relation(fields: [userId], references: [id])
  userId Int

  church Church @relation(fields: [churchId], references: [id])
  churchId Int

  meetingType MeetingType @relation(fields: [meetingTypeId], references: [id])
  meetingTypeId Int

  reportType ReportType @relation(fields: [reportTypeId], references: [id])
  reportTypeId Int

  reportDetails ReportDetails[]
}

model ReportDetails{
  id Int @default(autoincrement()) @id
  attendance Int
  offering Int
  first_timers Int
  young_convert Int
  number_saved Int
  tithe Int
  partnership Int?
  details Json?

  created_on DateTime @default(now())
  updated_on DateTime @updatedAt
  deleted_on DateTime?

  report Report @relation(fields: [reportId], references: [id])
  reportId Int

}

enum ReportTypeEnum {
  CELL_REPORT
  SERVICE_REPORT
}

model ReportType{
  id Int @default(autoincrement()) @id
  description ReportTypeEnum @unique

  reports Report[]
}

model ReportHistory {
  id Int @default(autoincrement()) @id
  start_date DateTime @default(now())
  end_date DateTime
  details Json

  user User @relation(fields: [userId], references: [id])
  userId Int
}

enum MeetingTypeEnum {
  BIBLE_STUDY
  PRAYER_MEETING
  SUNDAY_SERVICE
  THANKSGIVING_SERVICE
  PARTNERSHIP_SERVICE
  BIBLE_STUDY_CLASS
}

model MeetingType {
  id Int @default(autoincrement()) @id
  type MeetingTypeEnum @unique

  reports Report[]
}

enum ChurchEnum {
    BLW_UNIVERSITY_OF_BUEA
    BLW_NDONGO
    BLW_BAMBILI
    BLW_UNIVERSITY_OF_DOUALA
    BLW_BONABERI
    BLW_FOUMBAN
    BLW_TIKU
    BLW_AGRICSCHOOL
    BLW_POLYTECH
}

enum Country{
  CAMEROON
  NIGERIA
  GHANA
  USA
  UK
}

model Church {
  id Int @default(autoincrement()) @id
  name ChurchEnum @unique
  country Country @default(CAMEROON)
  city String

  users User[]
  reports Report[]
}